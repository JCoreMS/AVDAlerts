{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scheduledqueryrules_alert_eus2_AVDVM_NotAvailable_name": {
            "defaultValue": "alert-eus2-AVDVM-NotAvailable",
            "type": "String"
        },
        "workspaces_law_eastus2_avdvms_externalid": {
            "defaultValue": "/subscriptions/8a0ecebc-0e1d-4e8f-8cb8-8a92f49455b9/resourceGroups/rg-eastus2-avdlab-manage/providers/microsoft.operationalinsights/workspaces/law-eastus2-avdvms",
            "type": "String"
        },
        "actiongroups_actgrp_eastus2_avd_externalid": {
            "defaultValue": "/subscriptions/8a0ecebc-0e1d-4e8f-8cb8-8a92f49455b9/resourceGroups/rg-eastus2-avdlab-manage/providers/microsoft.insights/actiongroups/actgrp-eastus2-avd",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2021-08-01",
            "name": "[parameters('scheduledqueryrules_alert_eus2_AVDVM_NotAvailable_name')]",
            "location": "eastus2",
            "properties": {
                "displayName": "[parameters('scheduledqueryrules_alert_eus2_AVDVM_NotAvailable_name')]",
                "severity": 2,
                "enabled": true,
                "evaluationFrequency": "PT5M",
                "scopes": [
                    "[parameters('workspaces_law_eastus2_avdvms_externalid')]"
                ],
                "targetResourceTypes": [
                    "microsoft.operationalinsights/workspaces"
                ],
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "query": "let MapToDesc = (idx:long) {\n    case(idx == 0,  \"DomainJoin\",\n         idx == 1,  \"DomainTrust\",\n         idx == 2,  \"FSLogix\",\n         idx == 3,  \"SxSStack\",\n         idx == 4,  \"URLCheck\",\n         idx == 5,  \"GenevaAgent\",\n         idx == 6,  \"DomainReachable\",\n         idx == 7,  \"WebRTCRedirector\",\n         idx == 8,  \"SxSStackEncryption\",\n         idx == 9,  \"IMDSReachable\",\n         idx == 10, \"MSIXPackageStaging\",\n         \"InvalidIndex\")\n};\nWVDAgentHealthStatus\n| extend var = tostring(SessionHostHealthCheckResult)\n| extend result = parse_json(var)\n| mv-expand result\n| extend HealthCheckName = tolong(result.HealthCheckName)\n| extend HealthCheckResult = tolong(result.HealthCheckResult)\n| extend HealthCheckDesc = MapToDesc(HealthCheckName)\n| where HealthCheckResult == 1\n| summarize count(), min(TimeGenerated), max(TimeGenerated) by SessionHostName\n",
                            "timeAggregation": "Total",
                            "metricMeasureColumn": "count_",
                            "dimensions": [
                                {
                                    "name": "SessionHostName",
                                    "operator": "Include",
                                    "values": [
                                        "*"
                                    ]
                                }
                            ],
                            "operator": "GreaterThan",
                            "threshold": 1,
                            "failingPeriods": {
                                "numberOfEvaluationPeriods": 1,
                                "minFailingPeriodsToAlert": 1
                            }
                        }
                    ]
                },
                "autoMitigate": true,
                "actions": {
                    "actionGroups": [
                        "[parameters('actiongroups_actgrp_eastus2_avd_externalid')]"
                    ]
                }
            }
        }
    ]
}
